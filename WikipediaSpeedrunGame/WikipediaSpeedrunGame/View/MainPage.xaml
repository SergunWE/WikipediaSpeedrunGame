<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="WikipediaSpeedrunGame.MainPage">
	<ContentPage.Content>
		<StackLayout>
			<Label Text="Wikipedia Speedrun Game" HorizontalTextAlignment="Center" VerticalTextAlignment="Start"
				  FontSize="{OnPlatform iOS=Title, Android=Title, UWP=Header}"/>
			<Label Text="Start Page"/>
			<Picker x:Name="startPagePicker" ItemsSource="{StaticResource Key=selectingPage}" SelectedIndex="{Binding StartPageTypeIndex}"/>
			<Label Text="Finish Page"/>
			<Picker x:Name="finishPagePicker" ItemsSource="{StaticResource Key=selectingPage}" SelectedIndex="{Binding FinishPageTypeIndex}"/>
			<Button Text = "Start game" FontSize="Medium" BorderWidth="1"
		HorizontalOptions="Center" VerticalOptions="CenterAndExpand"
		Command="{Binding StartGameCommand}"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
