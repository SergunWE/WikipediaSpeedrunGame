<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WikipediaSpeedrunGame.GamePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding StartPageTitle}" FontSize="Medium" />
            <Label Text="{Binding RequiredPageTitle}" FontSize="Medium" />
            <WebView Source="{Binding StartPageUrl}" Navigating="WebViewNavigating" VerticalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>